<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_main">

    <android.view.View
        android:id="@+id/horizontal_upper_line"
        style="@style/HorizontalLineStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nap_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_nap"
        app:layout_constraintStart_toStartOf="@+id/horizontal_upper_line"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_upper_line" />

    <TextView
        android:id="@+id/time_nap1_start"
        style="@style/TimeStyle"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/no_time"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/set_nap1_start_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nap_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_upper_line"
        tools:text="11:45" />

    <ImageButton
        android:id="@+id/set_nap1_start_button"
        style="@style/SetTimeButtonStyle"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/set_time_description"
        android:src="@android:drawable/ic_lock_idle_alarm"
        app:layout_constraintBottom_toBottomOf="@+id/time_nap1_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/time_nap1_start" />

    <TextView
        android:id="@+id/firstNap_start_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        app:layout_constraintBaseline_toBaselineOf="@+id/time_nap1_start"
        app:layout_constraintStart_toStartOf="@+id/horizontal_line3" />

    <android.view.View
        android:id="@+id/horizontal_line3"
        style="@style/HorizontalLineStyle"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nap_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/time_nap1_start" />

    <TextView
        android:id="@+id/firstNap_end_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end"
        app:layout_constraintBaseline_toBaselineOf="@+id/time_nap1_end"
        app:layout_constraintStart_toStartOf="@+id/firstNap_start_textView" />

    <TextView
        android:id="@+id/time_nap1_end"
        style="@style/TimeStyle"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/no_time"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/time_nap1_start"
        app:layout_constraintStart_toStartOf="@+id/time_nap1_start"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_line3" />

    <ImageButton
        android:id="@+id/set_nap1_end_button"
        style="@style/SetTimeButtonStyle"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/set_time_description"
        android:src="@android:drawable/ic_lock_idle_alarm"
        app:layout_constraintBottom_toBottomOf="@+id/time_nap1_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/time_nap1_end" />


</androidx.constraintlayout.widget.ConstraintLayout>