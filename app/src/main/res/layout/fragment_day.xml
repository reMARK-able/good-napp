<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dedede">

        <include
            android:id="@+id/card_start"
            layout="@layout/day_start_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/wakeTime1_textView"
            style="@style/AwakeTimeTextViewStyle"
            android:layout_marginStart="4dp"
            android:text="@string/sample_awake_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_start" />

        <include
            android:id="@+id/nap1"
            layout="@layout/nap_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wakeTime1_textView" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/wakeTime2_textView"
            style="@style/AwakeTimeTextViewStyle"
            android:layout_marginStart="4dp"
            android:text="@string/sample_awake_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nap1" />

        <include
            android:id="@+id/nap2"
            layout="@layout/nap_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wakeTime2_textView" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/wakeTime3_textView"
            style="@style/AwakeTimeTextViewStyle"
            android:layout_marginStart="4dp"
            android:text="@string/sample_awake_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nap2" />

        <include
            android:id="@+id/card_summary"
            layout="@layout/summary_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wakeTime3_textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>