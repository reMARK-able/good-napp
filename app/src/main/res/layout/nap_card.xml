<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_nap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPaddingBottom="@dimen/padding_card_content_small"
    app:contentPaddingLeft="@dimen/padding_card_content"
    app:contentPaddingRight="@dimen/padding_card_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nap_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nap_duration_container"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:hint="@string/nap_label"
            app:layout_constraintEnd_toEndOf="@id/napStart_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/target_bedtime_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:fontFamily="@font/orbitron"
                android:inputType="time"
                android:text="@string/sample_awake_time"
                android:textAlignment="center" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/delete_description"
            android:cropToPadding="false"
            android:tint="@android:color/secondary_text_dark_nodisable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_delete_black_24dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/napEnd_container"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/middleBox_margin"
            android:layout_marginEnd="24dp"
            android:hint="@string/end"
            app:layout_constraintBottom_toBottomOf="@+id/napStart_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/napStart_container"
            app:layout_constraintTop_toTopOf="@+id/napStart_container">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nap_end_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:textAlignment="center" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/napStart_container"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/start"
            app:layout_constraintEnd_toStartOf="@+id/napEnd_container"
            app:layout_constraintStart_toStartOf="@id/nap_duration_container"
            app:layout_constraintTop_toBottomOf="@+id/nap_duration_container">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nap_start_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:textAlignment="center" />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
